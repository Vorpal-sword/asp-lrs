@model User

<form asp-action="OrderConfirmation">
    <h2>Orders</h2>

    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="product">
            <h3>Product @(i + 1)</h3>

            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" id="Name" name="products[@i].Name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="Quantity">Quantity:</label>
                <input type="number" id="Quantity" name="products[@i].Quantity" class="form-control" min="0" required>
            </div>
            <div class="form-group">
                <label for="Price">Price:</label>
                <input type="number" id="Price" name="products[@i].Price" class="form-control" min="0" required>
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Confirm Order</button>
</form>